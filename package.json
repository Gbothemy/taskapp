{
  "name": "taskapp",
  "version": "1.0.0",
  "description": "Full-Stack Task Completion Platform",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "npm install && cd client && npm install && chmod +x node_modules/.bin/* && npm run build",
    "build:server": "cd server && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "setup-supabase": "node setup-supabase.js",
    "verify-build": "node verify-build.js",
    "test-database": "node test-database.js",
    "deploy": "bash deploy.sh",
    "docker:build": "docker build -t taskapp:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f taskapp"
  },
  "keywords": [
    "task",
    "platform",
    "micro-earning",
    "react",
    "nodejs"
  ],
  "author": "TaskApp Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.87.1",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0",
    "socket.io": "^4.7.4",
    "stripe": "^14.9.0",
    "nodemailer": "^6.9.7",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0"
  }
}
